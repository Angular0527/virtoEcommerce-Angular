<?xml version="1.0" encoding="utf-8" ?>
<module>
	<id>VirtoCommerce.Marketing</id>
	<version>2.4.0</version>
	<platformVersion>2.4.0</platformVersion>
	<dependencies>
		<dependency id="VirtoCommerce.Core" version="2.4.0" />
	</dependencies>

	<title>Marketing module</title>
	<description>Marketing system with dynamic contents and promotions management</description>
	<authors>
		<author>Virto Commerce</author>
	</authors>
	<owners>
		<owner>Virto Commerce</owner>
	</owners>
	<projectUrl>http://virtocommerce.com/</projectUrl>
	<iconUrl>https://pbs.twimg.com/profile_images/378800000043280363/23efdf268b0001d3e68fd48216845d5f.png</iconUrl>
	<releaseNotes>First version.</releaseNotes>
	<copyright>Copyright © 2011-2015 Virto Commerce. All rights reserved</copyright>
	<tags>marketing promotion</tags>

	<assemblyFile>VirtoCommerce.MarketingModule.Web.dll</assemblyFile>
	<moduleType>VirtoCommerce.MarketingModule.Web.Module, VirtoCommerce.MarketingModule.Web</moduleType>
	<scripts>
		<directory virtualPath="$/Scripts" searchPattern="*.js" searchSubdirectories="true" />
	</scripts>

	<settings>
		<group name="Marketing|General">
			<setting>
				<name>Marketing.ExportImport.Description</name>
				<valueType>string</valueType>
				<defaultValue>Export/Import promotions and dynamic contents (places, contents, publications)</defaultValue>
				<title>Export/Import description</title>
				<description>Module description in platform export/import wizard</description>
			</setting>
		</group>
	</settings>
	<permissions>
		<group name="Marketing">
			<permission id="marketing:query" name="Browse marketing data" description="Permission to open marketing menu and browse data."/>
			<permission id="marketing:manage" name="Manage marketing" description="Permission to manage marketing information."/>
		</group>
	</permissions>
</module>
