<div class="ajaxify-modal" id="ajaxifyModal" style="opacity: 1;" ng-class="{ 'is-visible': recentQuoteItemModalVisible }" ng-cloak="">
    <button class="ajaxifyCart--close" title="Close" ng-click="toggleRecentQuoteItemModal(recentQuoteItemModalVisible)">Close</button>
    <div class="ajaxifyCart--content" id="ajaxifyCart">
        <div class="ajax-informer" ng-class="{ 'fade': quoteRequestIsUpdating }" ng-if="!errorOccured && quoteRequestIsUpdating">
            <div class="loader"></div>
            <span>Quote request is updating</span>
        </div>
        <h1 class="h2" ng-if="!errorOccured">Product is added to quote request</h1>
        <div class="cart-row" ng-if="!errorOccured">
            <div class="grid">
                <div class="grid-item large--seven-twelfths">
                    <div class="grid">
                        <div class="grid-item one-third large--one-quarter">
                            <span class="cart-image">
                                <img ng-src="{( quoteRequest.RecentlyAddedItem.ImageUrl )}" />
                            </span>
                        </div>
                        <div class="grid-item two-thirds large--three-quarters">
                            <a ng-bind="quoteRequest.RecentlyAddedItem.Name"></a>
                        </div>
                    </div>
                </div>
                <div class="grid-item large--five-twelfths medium--two-thirds push--medium--one-third">
                    <div class="grid">
                        <div class="grid-item one-half medium-down--one-third text-right">
                            <div class="ajaxifyCart--qty">&nbsp;</div>
                        </div>
                        <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
                            <span class="h2" ng-bind="quoteRequest.RecentlyAddedItem.SalePrice.FormatedAmount"></span>
                            <span style="text-decoration: line-through;" ng-if="quoteRequest.RecentlyAddedItem.ListPrice.Amount != quoteRequest.RecentlyAddedItem.SalePrice.Amount" ng-bind="quoteRequest.RecentlyAddedItem.ListPrice.FormatedAmount"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="cart-row" ng-if="!errorOccured">
            <div class="grid">
                <div class="grid-item text-right">
                    <button class="btn" ng-click="outerRedirect('{{ 'quoterequest' | absolute_url }}')" ng-class="{ 'btn': !quoteRequestIsUpdating, 'btn-secondary': quoteRequestIsUpdating || errorOccured }" ng-disabled="quoteRequestIsUpdating">Go to quote request</button>
                    <button class="btn" ng-click="toggleRecentQuoteItemModal(recentQuoteItemModalVisible)">Continue shopping</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="ajaxifyCart-overlay" ng-if="recentQuoteItemModalVisible"></div>