<div class="sidebar__header">
    <a class="logo logo--left" href="{{ '/' | absolute_url }}">
        <h1 class="logo__text">{{ shop.name }}</h1>
    </a>
</div>
<div class="sidebar__content">
    <div class="order-summary" ng-class="{ 'order-summary--is-expanded': checkout.orderSummaryExpanded, 'order-summary--is-collapsed': !checkout.orderSummaryExpanded }">
        <div class="order-summary__section order-summary__section--product-list">
            <table class="product-table">
                <thead>
                    <tr>
                        <th scope="col">
                            <span class="visually-hidden">{{ 'checkout.description' | t }}</span>
                        </th>
                        <th scope="col">
                            <span class="visually-hidden">{{ 'checkout.price' | t }}</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="product" ng-repeat="lineItem in checkout.cart.Items">
                        <td class="product__image">
                            <div class="product__image__inner">
                                <span class="product__quantity" ng-bind="lineItem.Quantity"></span>
                                <img alt="{( lineItem.Name )}" ng-src="{( lineItem.ImageUrl )}" />
                            </div>
                        </td>
                        <td class="product__description">
                            <span class="product__description__name order-summary__emphasis" ng-bind="lineItem.Name"></span>
                            <span class="product__description__variant order-summary__small-text">
                                <!-- TODO: Add properties -->
                            </span>
                        </td>
                        <td class="product__price">
                            <span class="order-summary__emphasis" ng-bind="lineItem.ExtendedPrice.FormatedAmount"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="order-summary__section order-summary__section--discount">
            <form accept-charset="UTF-8" action="" class="edit_checkout animate-floating-labels" method="post" name="formCoupon">
                <div class="fieldset">
                    <div class="field" ng-class="{ 'field--show-floating-label': checkout.cart.Coupon.Code.length, 'field--error': checkout.couponError == 'InvalidCouponCode' }" ng-if="!checkout.cart.Coupon.AppliedSuccessfully">
                        <div class="field__input-btn-wrapper">
                            <div class="field__input-wrapper">
                                <label class="field__label" for="Coupon">{{ 'checkout.discount' | t }}</label>
                                <input class="field__input" id="Coupon" name="Coupon" placeholder="{{ 'checkout.discount' | t }}" required="required" size="30" type="text" ng-model="checkout.cart.Coupon.Code" ng-change="checkout.couponError = null" />
                            </div>
                            <button class="field__input-btn btn btn--default" type="button" ng-click="addCoupon(checkout.cart.Coupon.Code)" ng-class="{ 'btn--loading': checkout.couponProcessing }">
                                <span class="btn__content visually-hidden-on-mobile">{{ 'checkout.apply' | t }}</span>
                                <i class="btn__content shown-on-mobile icon icon--arrow"></i>
                                <i class="btn__spinner icon icon--button-spinner"></i>
                            </button>
                        </div>
                        <p class="field__message field__message--error" ng-if="checkout.couponError == 'InvalidCouponCode'">
                            This code did not match any active gift card or discount. Was it entered correctly?
                        </p>
                    </div>
                    <div class="field" ng-if="checkout.cart.Coupon.AppliedSuccessfully">
                        <div class="field__input-btn-wrapper">
                            <div class="field__input-wrapper">
                                <span style="font-size: 1.71em; font-weight: 500; line-height: 40px;" ng-bind="checkout.cart.Coupon.Code"></span>
                                <span tabindex="0" class="field__icon icon icon--question has-tooltip" role="tooltip" ng-if="checkout.cart.Coupon.Description">
                                    <span class="tooltip">
                                        <span ng-bind="checkout.cart.Coupon.Description"></span>
                                    </span>
                                </span>
                            </div>
                            <button class="field__input-btn btn btn--default" type="button" ng-click="removeCoupon()" ng-class="{ 'btn--loading': checkout.couponProcessing }">
                                <span class="btn__content visually-hidden-on-mobile">Remove</span>
                                <i class="btn__content shown-on-mobile icon icon--arrow"></i>
                                <i class="btn__spinner icon icon--button-spinner"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="order-summary__section order-summary__section--total-lines">
            <table class="total-line-table">
                <thead>
                    <tr>
                        <th scope="col">
                            <span class="visually-hidden">{{ 'checkout.description' | t }}</span>
                        </th>
                        <th scope="col">
                            <span class="visually-hidden">{{ 'checkout.price' | t }}</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="total-line total-line--subtotal">
                        <td class="total-line__name">{{ 'checkout.subtotal' | t }}</td>
                        <td class="total-line__price">
                            <span class="order-summary__emphasis" ng-bind="checkout.cart.SubTotal.FormatedAmount"></span>
                        </td>
                    </tr>
                    <tr class="total-line total-line--subtotal">
                        <td class="total-line__name">{{ 'checkout.discount' | t }}</td>
                        <td class="total-line__price">
                            <span class="order-summary__emphasis" ng-bind="checkout.cart.DiscountTotal.FormatedAmount"></span>
                        </td>
                    </tr>
                    <tr class="total-line total-line--shipping">
                        <td class="total-line__name">{{ 'checkout.shipping' | t }}</td>
                        <td class="total-line__price">
                            <span class="order-summary__emphasis" ng-bind="checkout.cart.ShippingTotal.FormatedAmount"></span>
                        </td>
                    </tr>
                    <tr class="total-line total-line--taxes">
                        <td class="total-line__name">{{ 'checkout.taxes' | t }}</td>
                        <td class="total-line__price">
                            <span class="order-summary__emphasis" ng-bind="checkout.cart.TaxTotal.FormatedAmount"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="order-summary__section order-summary__section--total">
            <table class="total-line-table">
                <thead>
                    <tr>
                        <th scope="col">
                            <span class="visually-hidden">{{ 'checkout.description' | t }}</span>
                        </th>
                        <th scope="col">
                            <span class="visually-hidden">{{ 'checkout.price' | t }}</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="total-line">
                        <td class="total-line__name payment-due-label">{{ 'checkout.total' | t }}</td>
                        <td class="total-line__price payment-due">
                            <!-- TODO: Translate -->
                            <span class="payment-due__currency">CAD</span>
                            <span class="payment-due__price" ng-bind="checkout.cart.Total.FormatedAmount"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>