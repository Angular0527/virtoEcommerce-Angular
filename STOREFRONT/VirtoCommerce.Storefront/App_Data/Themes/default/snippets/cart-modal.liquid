<div class="ajaxify-modal" id="ajaxifyModal" style="opacity: 1;" ng-class="{ 'is-visible': recentCartItemModalVisible }" ng-cloak>
    <button class="ajaxifyCart--close" title="{{ 'cart.general.close_cart' | t }}" ng-click="toggleRecentCartItemModal(recentCartItemModalVisible)">{{ 'cart.general.close_cart' | t }}</button>
    <div class="ajaxifyCart--content" id="ajaxifyCart">
        <div class="ajax-informer" ng-class="{ 'fade': cartIsUpdating }" ng-if="!errorOccured && cartIsUpdating">
            <div class="loader"></div>
            <span>{{ 'cart.general.updating_cart_message' | t }}</span>
        </div>
        <h1 class="h2" ng-if="!errorOccured">Product is added to cart</h1>
        <div class="cart-row" ng-if="!errorOccured">
            <div class="grid">
                <div class="grid-item large--seven-twelfths">
                    <div class="grid">
                        <div class="grid-item one-third large--one-quarter">
                            <span class="cart-image">
                                <img ng-src="{( cart.RecentlyAddedItem.ImageUrl )}" />
                            </span>
                        </div>
                        <div class="grid-item two-thirds large--three-quarters">
                            <a ng-bind="cart.RecentlyAddedItem.Name"></a>
                        </div>
                    </div>
                </div>
                <div class="grid-item large--five-twelfths medium--two-thirds push--medium--one-third">
                    <div class="grid">
                        <div class="grid-item one-half medium-down--one-third text-right">
                            <div class="ajaxifyCart--qty" ng-bind="cart.RecentlyAddedItem.Quantity"></div>
                        </div>
                        <div class="grid-item one-third medium-down--one-third medium-down--text-left text-right">
                            <span class="h2" ng-bind="cart.RecentlyAddedItem.PlacedPrice.FormatedAmount"></span>
                            <span style="text-decoration: line-through;" ng-if="cart.RecentlyAddedItem.ListPrice.Amount != cart.RecentlyAddedItem.PlacedPrice.Amount" ng-bind="cart.RecentlyAddedItem.ListPrice.FormatedAmount"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="cart-row" ng-if="!errorOccured">
            <div class="grid">
                <div class="grid-item text-right">
                    <button class="btn" ng-click="outerRedirect('{{ 'cart' | absolute_url }}')" ng-class="{ 'btn': !cartIsUpdating, 'btn-secondary': cartIsUpdating || errorOccured || cart.HasValidationErrors }" ng-disabled="cartIsUpdating || cart.HasValidationErrors">Go to cart</button>
                    <button class="btn" ng-click="toggleRecentCartItemModal(recentCartItemModalVisible)">Continue shopping</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="ajaxifyCart-overlay" ng-if="recentCartItemModalVisible"></div>